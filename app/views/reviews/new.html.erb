<div class="container pt-5 col-4">
  <h1>Create review</h1>
  <!-- <form action="/restaurants"> -->
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.submit class: 'btn btn-success text-white' %>
  <% end %>

  <br>

  <%= link_to "Back to restaurants", restaurants_path %>
</div>
